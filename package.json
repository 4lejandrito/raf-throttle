  },
  "homepage": "https://github.com/wuct/raf-throttle#readme",
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.6.5",
    "codecov": "^2.0.1",
    "raf": "^3.2.0",
    "nyc": "^10.0.0",
    "sinon": "^2.0.0"
